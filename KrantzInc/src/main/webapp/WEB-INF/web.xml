<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
	<display-name>Krantz Inc's Tuition Reimbursement Management System</display-name>
	<filter>
		<filter-name>AuthenticationFilter</filter-name>
		<display-name>AuthenticationFilter</display-name>
		<description></description>
		<filter-class>com.revature.servlet.AuthenticationFilter</filter-class>
	</filter>
	<filter>
		<filter-name>ManagementAuthenticationFilter</filter-name>
		<display-name>ManagementAuthenticationFilter</display-name>
		<description></description>
		<filter-class>com.revature.servlet.ManagementAuthenticationFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>AuthenticationFilter</filter-name>
		<url-pattern>/views/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>ManagementAuthenticationFilter</filter-name>
		<url-pattern>/views/managementportal/*</url-pattern>
	</filter-mapping>
	<servlet>
		<servlet-name>login</servlet-name>
		<display-name>login</display-name>
		<description></description>
		<servlet-class>com.revature.servlet.login</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>logout</servlet-name>
		<display-name>logout</display-name>
		<description></description>
		<servlet-class>com.revature.servlet.logout</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>ObjectController</servlet-name>
		<display-name>ObjectController</display-name>
		<description></description>
		<servlet-class>com.revature.servlet.ObjectController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>login</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>logout</servlet-name>
		<url-pattern>/logout</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ObjectController</servlet-name>
		<url-pattern>/actionObject/*</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>login.html</welcome-file>
	</welcome-file-list>
</web-app>
